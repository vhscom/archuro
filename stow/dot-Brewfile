# Install FFMpeg with all options
# Usage: brew "ffmpeg", args: ALL_FFMPEG_OPTIONS
ALL_FFMPEG_OPTIONS=`brew options ffmpeg | grep -vE '\s' | grep -- '--with-'`.gsub("--", "").split("\n")

