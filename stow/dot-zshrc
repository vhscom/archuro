# Source Bourne shell profile if exists
[[ -e ~/.profile ]] && emulate sh -c 'source ~/.profile'

# Jump around
[[ -r /usr/local/bin/z.sh ]] && . /usr/local/bin/z.sh

# Powerlevel10k (p10k) theme
[[ -r /usr/local/etc/powerlevel10k/powerlevel10k.zsh-theme ]] && \
    . /usr/local/etc/powerlevel10k/powerlevel10k.zsh-theme

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ -f ~/.p10k.zsh ]] && . ~/.p10k.zsh

# Run Arch Linux when Hyper is opened given requirements
# @requires [command] docker
# @requires [command] archuro
# [[ "$TERM_PROGRAM" == "Hyper" ]] && [[ -x "$(command -v archuro)" ]] && \
#     [[ -x "$(command -v docker)" ]] && archuro tty

# $ git log --no-merges --pretty=format:"%ae" | stats
# # => 514 a@example.com
# # => 200 b@example.com
function stats () {
    sort | uniq -c | sort -r
}

# $ color
function color () {
    for i in {0..255}; do print -Pn "%${i}F${(l:3::0:)i}%f " ${${(M)$((i%8)):#7}:+$'\n'}; done
}

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ -f ~/.p10k.zsh ]] && source ~/.p10k.zsh
